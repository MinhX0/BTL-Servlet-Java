<%-- Common top header and nav bar, using template assets prefix --%>
<%@ taglib prefix="c" uri="jakarta.tags.core" %>
<%@ taglib prefix="fn" uri="jakarta.tags.functions" %>
<script>
    window.appContextPath = '${pageContext.request.contextPath}';
</script>
<!-- Top Header Start -->
<div class="top-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-3">
                <div class="logo">
                    <c:choose>
                        <c:when test="${not empty sessionScope.user && sessionScope.user.admin}">
                            <c:url var="homeUrl" value="/admin"/>
                        </c:when>
                        <c:otherwise>
                            <c:url var="homeUrl" value="/index"/>
                        </c:otherwise>
                    </c:choose>
                    <a href="${homeUrl}">
                        <c:url var="logoUrl" value="/assets/img/logo.png"/>
                        <img src="${logoUrl}" alt="Logo">
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <c:if test="${empty sessionScope.user || !sessionScope.user.admin}">
                    <div class="search">
                        <input type="text" placeholder="Tìm kiếm" aria-label="Tìm kiếm sản phẩm">
                        <button><i class="fa fa-search"></i></button>
                    </div>
                </c:if>
            </div>
            <div class="col-md-3">
                <div class="user d-flex align-items-center justify-content-end gap-2">
                    <div class="dropdown">
                        <c:choose>
                            <c:when test="${not empty sessionScope.user}">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-user"></i>
                                    <span>${fn:escapeXml(sessionScope.name != null ? sessionScope.name : sessionScope.username)}</span>
                                </a>
                                <div class="dropdown-menu">
                                    <c:choose>
                                        <c:when test="${sessionScope.user.admin}">
                                            <c:url var="adminUrl" value="/admin"/>
                                            <a href="${adminUrl}" class="dropdown-item">Bảng điều khiển</a>
                                        </c:when>
                                        <c:otherwise>
                                            <c:url var="accountUrl" value="/account"/>
                                            <a href="${accountUrl}" class="dropdown-item">Tài khoản của tôi</a>
                                            <c:url var="ordersUrl" value="/orders"/>
                                            <a href="${ordersUrl}" class="dropdown-item">Đơn hàng của tôi</a>
                                        </c:otherwise>
                                    </c:choose>
                                    <div class="dropdown-divider"></div>
                                    <c:url var="logoutUrl" value="/logout"/>
                                    <a href="${logoutUrl}" class="dropdown-item">Đăng xuất</a>
                                </div>
                            </c:when>
                            <c:otherwise>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tài khoản</a>
                                <div class="dropdown-menu">
                                    <c:url var="loginUrl" value="/login.jsp#login"/>
                                    <c:url var="registerUrl" value="/login.jsp#register"/>
                                    <a href="${loginUrl}" class="dropdown-item">Đăng nhập</a>
                                    <a href="${registerUrl}" class="dropdown-item">Đăng ký</a>
                                </div>
                            </c:otherwise>
                        </c:choose>
                    </div>
                    <c:if test="${empty sessionScope.user || !sessionScope.user.admin}">
                        <div class="cart">
                            <c:url var="cartUrl" value="/cart"/>
                            <a href="${cartUrl}" aria-label="Xem giỏ hàng"><i class="fa fa-cart-plus"></i></a>
                            <span>(${empty requestScope.cartCount ? 0 : requestScope.cartCount})</span>
                        </div>
                    </c:if>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Top Header End -->

<!-- Header Start -->
<div class="header">
    <div class="container">
        <nav class="navbar navbar-expand-md bg-dark navbar-dark">
            <a href="#" class="navbar-brand">MENU</a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                <div class="navbar-nav m-auto">
                    <c:choose>
                        <c:when test="${not empty sessionScope.user && sessionScope.user.admin}">
                            <c:url var="adminUrl2" value="/admin"/>
                            <a href="${adminUrl2}" class="nav-item nav-link">Bảng điều khiển</a>
                            <c:url var="adminOrdersUrl" value="/admin/orders"/>
                            <a href="${adminOrdersUrl}" class="nav-item nav-link">Đơn hàng</a>
                            <c:url var="adminProductsUrl" value="/admin/products"/>
                            <a href="${adminProductsUrl}" class="nav-item nav-link">Sản phẩm</a>
                            <c:url var="adminCategoriesUrl" value="/admin/categories"/>
                            <a href="${adminCategoriesUrl}" class="nav-item nav-link">Danh mục</a>
                        </c:when>
                        <c:otherwise>
                            <a href="${homeUrl}" class="nav-item nav-link ${fn:endsWith(pageContext.request.requestURI, '/index.jsp') || fn:endsWith(pageContext.request.requestURI, '/index') ? 'active' : ''}">Trang chủ</a>
                            <c:url var="productsUrl" value="/products"/>
                            <a href="${productsUrl}" class="nav-item nav-link">Sản phẩm</a>
                            <c:url var="contactUrl" value="/contact.jsp"/>
                            <a href="${contactUrl}" class="nav-item nav-link">Liên hệ</a>
                        </c:otherwise>
                    </c:choose>
                </div>
            </div>
        </nav>
    </div>
</div>
<!-- Header End -->
